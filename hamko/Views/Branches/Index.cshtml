@model List<Branch>
@{
}

<h2 class="text-center mb-5"> List of Branches</h2>

<div class="row mb-5">
	<div class="col">
		<a class="btn btn-primary" asp-controller="Branches" asp-action="Create">Add New Branch</a>
	</div>
	<div class="col">
	</div>
</div>

<table class="table">
	<thead>
		<tr>
			<th>Id</th>
			<th>Image</th>
			<th>Branch Name</th>
			<th style="width: 31rem;">Description</th>
			<th>Status</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var branch in Model)
		{
			<tr>
				<td>@branch.Id</td>
				<td>
					<img src="~/branches/@branch.ImageFileName" alt="branch Image" width="100" />
				</td>
				<td>@branch.BranchName</td>
				<td>@branch.Description</td>
				<td>@branch.Status</td>
				<td>
					<a href="branches/Details/@branch.Id" class="btn btn-sm btn-success">View</a>
					<a href="branches/Edit/@branch.Id" class="btn btn-sm btn-primary">Edit</a>
					<a href="branches/Delete/@branch.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this record?');">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>


