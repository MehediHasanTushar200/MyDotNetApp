@model List<Battery>
@{
}

<h2 class="text-center mb-5"> List of Batteries</h2>

<div class="row mb-5">
	<div class="col">
		<a class="btn btn-primary" asp-controller="Batteries" asp-action="Create">Add New Battery</a>
	</div>
	<div class="col">
	</div>
</div>

<table class="table">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Type</th>
			<th style="width: 31rem;">Description</th>
			<th>Status</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var battery in Model)
		{
			<tr>
				<td>@battery.Id</td>
				<td>
					<img src="~/batteries/@battery.ImageFileName" alt="battery Image" width="100" />
				</td>
				<td>@battery.Type</td>
				<td>@battery.Description</td>
				<td>@battery.Status</td>
				<td>
					<a href="batteries/Details/@battery.Id" class="btn btn-sm btn-success">View</a>
					<a href="batteries/Edit/@battery.Id" class="btn btn-sm btn-primary">Edit</a>
					<a href="batteries/Delete/@battery.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this record?');">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>


