@model Battery
@{
}

<h2>Battery Details</h2>

<div class="card" style="width: 50rem;">
    <div class="card-body">
        <h5 class="card-title">Battery Information</h5>

        <!-- Image Section: Right side of the page -->
        <div class="float-end">
            <img src="@Url.Content("~/batteries/" + Model.ImageFileName)" alt="Battery Image" width="150" />
        </div>

        <!-- Course Information -->
        <p class="card-text"><strong>ID:</strong> @Model.Id</p>
        <p class="card-text"><strong> Battery Name:</strong> @Model.Name</p>
        <p class="card-text"><strong> Battery Type:</strong> @Model.Type</p>
        <p class="card-text"><strong>Battery Description:</strong> @Model.Description</p>
        <p class="card-text"><strong>Battery Status:</strong> @Model.Status</p>
    </div>
</div>

<a href="@Url.Action("Index", "Batteries")" class="btn btn-success mt-3">Back to List</a>
