@model List<Brand>
@{
}

<h2 class="text-center mb-5"> List of Brands</h2>

<div class="row mb-5">
	<div class="col">
		<a class="btn btn-primary" asp-controller="Brands" asp-action="Create">Add New Brand</a>
	</div>
	<div class="col">

	</div>
</div>

<table class="table">
	<thead>
        <tr>
            <th>Brand No</th>
            <th style="width: 10rem;">Name</th>
            <th>Image</th>
			<th style="width: 30rem;">Description</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
	</thead>
	<tbody>
		@foreach (var brand in Model)
		{
			<tr>
				<td>@brand.Id</td>
				<td>
					<img src="~/brands/@brand.ImageFileName" alt="Brand Image" width="100" />
				</td>
				<td>@brand.Name</td>
				<td>@brand.Description</td>
				<td>@brand.Status</td>
				<td>
					<a href="Brands/Details/@brand.Id" class="btn btn-sm btn-success">View</a>
					<a href="Brands/Edit/@brand.Id" class="btn btn-sm btn-primary">Edit</a>
					<a href="Brands/Delete/@brand.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this record?');">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>


